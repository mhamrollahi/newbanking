<link rel="stylesheet" href="/static/assets/css/style.css" />

<div class="box-codingdata"></div>

<main class="container myform-section-wrapper my-4 mt-5">

  <div class="row justify-content-between align-items-center mb-10">

    <!-- Page Heading Start -->
    <div class="col-12 col-lg-auto mb-20" style="margin:20px 0;">
      <div class="page-heading page-heading-custom">
        <h3 class="title">اطلاعات پایه
          <span>/ جدول کدینگ اصلی</span><span>/ جدید</span></h3>
      </div>
    </div><!-- Page Heading End -->

  </div>

  <div class="row">
    <div class="col-12 col-sm-12 col-md-12">
      <form
        method="POST"
        name="frmCodeTableList"
        action="./store"
        class="row g-3 needs-validation"
        data-frmValidation
        novalidate
      >
        {{#if hasError}}
          <div class="alert alert-danger">
            {{#each errors}}
              <small class="errMessage">{{this}}</small>
            {{/each}}
          </div>
        {{/if}}

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="en_TableName"
            name="en_TableName"
            minlength="3"
            maxlength="50"
            autocomplete="off"
            placeholder="نام انگلیسی جدول را وارد کنید."
            required
          />
          <label for="en_TableName" class="mandatory">نام انگلیسی جدول</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="fa_TableName"
            name="fa_TableName"
            minlength="3"
            maxlength="50"
            autocomplete="off"
            placeholder="نام فارسی جدول را وارد کنید."
            required
          />
          <label for="fa_TableName" class="mandatory">نام فارسی جدول</label>
        </div>

        <div class="col-12 my-2 text-center">
          <button
            class="btn btn-success custom-btn"
            type="submit"
            id="btnSubmit"
          >ثبت </button>
          <a
            class="btn btn-secondary custom-btn"
            type="reset"
            id="btnCancel"
            href="./index"
          >انصراف</a>
        </div>
      </form>
    </div>
  </div>
</main>

<script src="/static/assets/js/formValidation.js"></script>