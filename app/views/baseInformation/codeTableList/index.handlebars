<style>
#dt-search-0{
  width:100%;
}
.dt-info{
  font-size: 16px;

}
.dt-felid{
  color:#030390;
}
.dt-felid:hover{
  font-size: 18px;
  transition: all .6s ease-in;
}
</style>


<div style="margin-top: 120px"></div>

<div class="row justify-content-between align-items-center mb-20">
    <div class="row justify-content-between align-items-center mb-10" style="margin-bottom: 20px;">

    <!-- Page Heading Start -->
      <div class="col-12 col-lg-auto mb-20" style="">
        <div class="page-heading page-heading-custom">
          <h3 class="title">اطلاعات پایه <span>/ جدول کدینگ اصلی</span></h3>
        </div>
      </div><!-- Page Heading End -->

    </div>

  <!-- Page Heading Start -->
  <div class="col-12 col-lg-auto mb-20">
    <div class="page-heading">
      <h3> لیست کدینگ اصلی سیستم</h3>
    </div>
  </div>
  <!-- Page Heading End -->

  <!-- Page Button Group Start -->
  <div class="col-12 col-lg-auto mb-20">
    <div class="buttons-group">
      <a href="./create" class="button button-primary">
        <span><i class="zmdi zmdi-plus"></i>تعریف کدینگ جدید</span>
      </a>
    </div>
  </div>
  <!-- Page Button Group End -->
  {{#if success}}
    <div class="col-12 w-100 d-flex justify-content-center mt-1 mb-1">
      <p class="alert alert-success w-50 text-center">{{success}}</p>
    </div>
  {{/if}}
         
  {{#if removeSuccess}}
    <div class="col-12 w-100 d-flex justify-content-center mt-1 mb-1">
      <p class="alert alert-danger w-50 text-center">{{removeSuccess}}</p>
    </div>
  {{/if}} 
</div>
  
<div class="row mb-30">
  <!-- Revenue Statistics Chart Start -->
  <div class="col-md-12 mb-30">
    <div class="box">
      <div class="box-body table-responsive">

        <table class="table table table-striped table-hover table-bordered mb-0" id="codeTableListTable">
          <!-- Table Head Start -->
          <thead>
            <tr style="background-color: #2727db; color:aliceblue">
              <th class="col-md-1">id
              </th>
              <th class="col-md-1">کدینگ
              </th>
              <th class="col-md-3 text-center">نام انگلیسی جدول
              </th>
              <th class="col-md-3 text-center">نام فارسی جدول
              </th>
              <th class="col-md-2 text-center">تاریخ ایجاد</th>
              <th class="col-md-2 text-center">نام درخواست کنند</th>
            </tr>
          </thead>
        </table>

      </div>
    </div>
  </div>
  <!-- Revenue Statistics Chart End -->
</div>
