<link rel="stylesheet" href="/static/assets/css/style.css" />

<div class="box-codingdata"></div>

<main class="container myform-section-wrapper my-4 mt-5">

  <div class="row justify-content-between align-items-center mb-10">

    <!-- Page Heading Start -->
    <div class="col-12 col-lg-auto mb-20" style="margin:20px 0;">
      <div class="page-heading page-heading-custom">
        <h3 class="title">اطلاعات پایه
          <span>/ جدول کدینگ اصلی</span><span>/ اصلاح</span></h3>
      </div>
    </div><!-- Page Heading End -->

  </div>

  <div class="row">
    <div class="col-12 col-sm-12 col-md-12">
      <form
        method="POST"
        name="frmCodeTableList"
        action="../update/{{codeTableList.id}}"
        class="row g-3 needs-validation"
        data-frmValidation novalidate
      >
        {{#if hasError}}
          <div class="alert alert-danger">
            {{#each errors}}
              <small class="errMessage">{{this}}</small>
            {{/each}}
          </div>
        {{/if}}

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="en_TableName"
            name="en_TableName"
            minlength="3"
            maxlength="50"
            autocomplete="off"
            placeholder="نام انگلیسی جدول را وارد کنید."
            value="{{codeTableList.en_TableName}}"
            required
          />
          <label for="en_TableName" class="mandatory">نام انگلیسی جدول</label>

        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            id="fa_TableName"
            name="fa_TableName"
            minlength="3"
            maxlength="50"
            autocomplete="off"
            placeholder="نام فارسی جدول را وارد کنید."
            value="{{codeTableList.fa_TableName}}"
            required
          />
          <label for="fa_TableName" class="mandatory">نام فارسی جدول</label>

          <small class="errMessage" data-err="formatted" hidden>
            حداکثر نام فارسی جدول سی کاراکتر باشد.</small>
          <small class="errMessage" data-err="mandatory" hidden>نام فارسی جدول
            اجباری می باشد.
          </small>

        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            readonly
            id="creator"
            name="creator"
            value="{{codeTableList.creator}}"
          />
          <label for="creator" class="mandatory">ایجاد کننده</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            readonly
            id="created_at"
            name="created_at"
            value="{{fa_createdAt}}"
          />
          <label for="created_at" class="mandatory">تاریخ ایجاد</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            readonly
            id="updater"
            name="creator"
            value="{{codeTableList.updater}}"
          />
          <label for="creator" class="mandatory">اصلاح کننده</label>
        </div>

        <div class="form-floating mb-3">
          <input
            type="text"
            class="form-control"
            readonly
            id="updated_at"
            name="updated_at"
            value="{{fa_updatedAt}}"
          />
          <label for="created_at" class="mandatory">تاریخ اصلاح</label>
        </div>

        <div class="col-12 my-2 text-center">
          <button
            class="btn btn-success custom-btn"
            type="submit"
            id="btnSubmit"
          >اصلاح </button>
          <a
            class="btn btn-secondary custom-btn"
            type="reset"
            id="btnCancel"
            href="../index"
          >انصراف</a>
        </div>
      </form>
    </div>
  </div>
</main>

  <script src="/static/assets/js/formValidation.js"></script>
