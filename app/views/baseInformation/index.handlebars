<div class="row mbn-30">
  <!-- Revenue Statistics Chart Start -->
  <div class="col-md-12 mb-30">
    <div class="box">
      <div class="box-body table-responsive">
        <table
          class="table table table-striped table-hover table-bordered mb-0"
        >
          <!-- Table Head Start -->
          <thead>
            <tr class="table-primary d-flex">
              <th class="col-md-1">ردیف</th>
              <th class="col-md-1">کد</th>
              <th class="col-md-3">نام انگلیسی جدول</th>
              <th class="col-md-3">نام فارسی جدول</th>
              <th class="col-md-2">تاریخ ایجاد</th>
              <th class="col-md-2">نام درخواست کنند</th>
            </tr>
          </thead>
          <!-- Table Head End -->

          <!-- Table Body Start -->
          <tbody>

            {{#each result}}

              <tr class="row-table d-flex">
                <td class="col-md-1">
                  {{this.id}}
                </td>
                <td class="col-md-1">
                  {{this.code}}
                </td>
                <td class="col-md-3 text-wrap text-small">
                  {{this.en_TableName}}
                  <div class="table-action-buttons text-center">
                    <a
                      class="edit button button-box button-xs button-info"
                      href="/admin/users/edit/{{this.id}}"
                    ><i class="zmdi zmdi-edit"></i></a>
                    <a
                      class="delete button button-box button-xs button-danger"
                      href="/admin/users/delete/{{this.id}}"
                    ><i class="zmdi zmdi-delete"></i></a>
                  </div>
                </td>
                <td class="col-md-3 text-wrap text-small">
                  {{this.fa_TableName}}
                  <div class="table-action-buttons text-center">
                    <a
                      class="edit button button-box button-xs button-info"
                      href="/admin/users/edit/{{this.id}}"
                    ><i class="zmdi zmdi-edit"></i></a>
                    <a
                      class="delete button button-box button-xs button-danger"
                      href="/admin/users/delete/{{this.id}}"
                    ><i class="zmdi zmdi-delete"></i></a>
                  </div>
                </td>

                <td class="col-md-2 text-wrap">
                  {{this.fa_created_at}}
                </td>

                <td class="col-md-2">
                  {{this.creator}}
                </td>

              </tr>

            {{/each}}
          </tbody>
          <!-- Table Body End -->
        </table>
                    <div class="dataTables_paginate paging_simple_numbers" style="margin: 10px;">
              <a class="paginate_button previous btn btn-success disabled">
                <i class="zmdi zmdi-chevron-left"></i>
              </a>
              {{#if pagination.isMoreThan3Pages}}
                <span>
                  <a class="paginate_button current btn btn-success">1</a>
                  <a class="paginate_button btn btn-success">2</a>
                  <a class="paginate_button btn btn-success">3</a>
                  <a class="paginate_button btn">. . .</a>
                </span>

                {{else}}
                <span>
                  <a class="paginate_button current btn btn-success">1</a>
                  <a class="paginate_button btn btn-success">2</a>
                </span>

              {{/if}}
                <a class="paginate_button next">
                  <i class="zmdi zmdi-chevron-right btn btn-success"></i>
                </a>
            </div>

      </div>
    </div>
  </div>
  <!-- Revenue Statistics Chart End -->
</div>