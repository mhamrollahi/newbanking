<link rel='stylesheet' href='/static/assets/css/style.css' />

<div class='d-flex align-self-center justify-content-center order-2 order-lg-1 col-lg-5 col-12'>
  <div class='login-register-form-wrap'>

    <div class='content'>
      {{! <h1>ورود</h1> }}
      <h2> اداره کل خزانه </h2>
      <h3>سامانه مدیریت امور بانکی نسخه جدید </h3>
    </div>

    <div class='login-register-form'>
      {{#if hasErrors}}
        <div class='row mb-5'>
          <div class='col-12'>
            <div class='alert alert-outline-secondary' role='alert'>
              {{#each errors}}

                <p>{{this}}</p>

              {{/each}}
            </div>
          </div>
        </div>
      {{/if}}
      <form action='/auth/login' method='POST' data-frmValidation novalidate>
        <div class='row'>
          <div class='col-12 mb-20'>
            <input type='text' name='userName' placeholder='نام کاربری / کدملی' class='form-control' required />
          </div>
          <div class='col-12 mb-20'>
            <input type='password' name='password' placeholder='رمز عبور' class='form-control' required />
            <i class='zmdi zmdi-eye-off icon-pass-loginfrm' id='password-eye1'></i>
          </div>
          <div class='col-12 mb-20'>
            <label for='remember' class='adomx-checkbox-2'>
              <input id='remember' name='remember_me' type='checkbox' />
              <i class='icon'></i>
              مرا به خاطر داشته باش.
            </label>
          </div>
          <div class='col-12'>
            <div class='row justify-content-between'>
              <div class='col-auto mb-15'>
                <a href='#'>فراموشی رمز عبور؟</a>
              </div>
              {{! <div class='col-auto mb-15'>آیا حساب کاربری ندارید؟
                <a href='/auth/register'>هم اکنون ایجاد کنید.</a>
              </div> }}
            </div>
          </div>
          <div class='col-12 mt-10'>
            <button class='button button-primary button-outline'>ورود</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>