<div style="margin-top: 120px"></div>

<!-- Page Heading Start -->
<div class="col-12 col-lg-auto mb-20">
  <div class="page-heading page-heading-custom">
    <h3 class="title">{{title}} <span>/ {{subTitle}}</span></h3>
  </div>
</div><!-- Page Heading End -->

<!-- Page Heading Start -->
<div style="margin-left:0;">

  <div class="page-heading">
    <h3> {{title}}</h3>
  </div>

  <!-- Page Heading End -->

  <!-- Page Button Group Start -->
  <div style="text-align: left;position: relative;top:-25px">
    <a href="./create" class="button button-primary">
      <span><i class="zmdi zmdi-plus"></i>تعریف حساب جدید</span>
    </a>
  </div>
</div>
<!-- Page Button Group End -->
{{#if success}}
  <div class="col-12 w-100 d-flex justify-content-center mt-1 mb-1">
    <p class="alert alert-success w-50 text-center">{{success}}</p>
  </div>
{{/if}}

{{#if removeSuccess}}
  <div class="col-12 w-100 d-flex justify-content-center mt-1 mb-1">
    <p class="alert alert-danger w-50 text-center">{{removeSuccess}}</p>
  </div>
{{/if}}

<!-- Revenue Statistics Chart Start -->
<div class="col-md-12 mb-30">
  <div class="box">
    <div class="box-body table-responsive">

      <table
        class="table table-striped table-hover table-bordered mb-0 table-custom"
        id="accountMng"
      >
        <!-- Table Head Start -->
        <thead>
          <tr class="table-header-custom">
            <th class="col-md-1">ردیف</th>
            <th class="col-md-1">نام دستگاه</th>
            <th class="col-md-1 text-center">ردیف بودجه</th>
            <th class="col-md-1 text-center">شناسه ملی دستگاه</th>
            <th class="col-md-1 text-center">شماره حساب</th>
            <th class="col-md-2 text-center">عنوان حساب</th>
            <th class="col-md-1 text-center">نوع حساب</th>
            <th class="col-md-1 text-center">نام بانک</th>
            <th class="col-md-1 text-center">کد شبعه</th>
            <th class="col-md-1 text-center">شماره نامه</th>
          </tr>
        </thead>
      </table>

    </div>
  </div>

  <!-- Revenue Statistics Chart End -->
</div>